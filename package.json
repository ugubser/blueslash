{
  "name": "blueslash",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build --mode emulator node scripts/process-messaging-sw.js --mode emulator",
    "build:prod": "tsc -b && vite build --mode production && node scripts/process-messaging-sw.js --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:emulator": "vite preview --mode emulator",
    "preview:prod": "vite preview --mode production",
    "emulators": "firebase emulators:start",
    "serve:emulator": "npm run build && firebase serve --only hosting --port 5003",
    "deploy": "npm run build:prod && firebase deploy"
  },
  "dependencies": {
    "@types/uuid": "^9.0.7",
    "firebase": "^10.7.1",
    "lucide-react": "^0.400.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.1",
    "tailwindcss": "^3.3.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.4.32",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^0.17.4"
  }
}
